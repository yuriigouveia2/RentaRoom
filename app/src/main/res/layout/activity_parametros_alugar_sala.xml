<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/titulo_alugar_sala"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Inicial:"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="left" android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dia:"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText android:layout_height="wrap_content"
                android:id="@+id/diaInicialId"
                android:layout_marginRight="10dp"
                android:layout_width="55dp"
                android:inputType="number"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mês"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff" />

            <EditText android:layout_height="wrap_content"
                android:id="@+id/mesInicialId"
                android:layout_width="55dp"
                android:layout_marginRight="10dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText android:layout_height="wrap_content"
                android:id="@+id/anoInicialId"
                android:layout_width="65dp"
                android:inputType="number"
                android:layout_marginRight="10dp" />

        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Final: "
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="left" android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dia:"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText android:layout_height="wrap_content"
                android:layout_width="55dp"
                android:id="@+id/diaFinalId"
                android:inputType="number"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mês"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText android:layout_height="wrap_content"
                android:layout_width="55dp"
                android:id="@+id/mesFinalId"
                android:inputType="number"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText android:layout_height="wrap_content"
                android:layout_width="65dp"
                android:id="@+id/anoFinalId"
                android:inputType="number"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">

            <TextView
                android:layout_height="wrap_content"
                android:text="Inicial:"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/horaInicialId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_height="match_parent"
                android:inputType="number"
                android:layout_width="40dp"
                android:id="@+id/minutoInicialId"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:text="Final:"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/horaFinalId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/minutoFinalId" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de pessoas: "
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quantidade_paramentro"/>


        </LinearLayout>




        <Button
            android:text="Alugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alugarId"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:background="@android:color/background_dark"  />



    </LinearLayout>

</ScrollView>